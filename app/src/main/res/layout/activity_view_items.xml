<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.ViewItemsActivity">
        <TextView
            android:id="@+id/itemList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/list_of_items"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="57dp" />

        <ListView
            android:id="@+id/items_list_listView"
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="@id/itemList"
            app:layout_constraintStart_toStartOf="@id/itemList"
            app:layout_constraintTop_toTopOf="@id/itemList">

        </ListView>

</RelativeLayout>