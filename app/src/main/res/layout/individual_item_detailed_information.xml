<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_ind_item_view_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ind_item_view_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ind_item_view_valueDollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_ind_item_view_item_name"
        android:layout_marginEnd="64dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ind_item_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ind_item_view_valueDollars"
        android:layout_alignTop="@+id/textView_ind_item_view_time_stamp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ind_item_view_shortDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ind_item_view_longDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ind_item_view_valueDollars"
        android:layout_alignTop="@+id/textView_ind_item_view_shortDes"
        android:text="TextView"
        android:textSize="20sp" />

</RelativeLayout>