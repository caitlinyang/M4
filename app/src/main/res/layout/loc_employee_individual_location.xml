<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_ind_location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:text="@string/text_view" />

    <TextView
        android:id="@+id/textView_ind_location_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="@string/text_view" />

    <TextView
        android:id="@+id/textView_ind_location_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:text="@string/text_view" />

    <TextView
        android:id="@+id/textView_ind_location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:layout_centerVertical="true"
        android:text="@string/text_view" />

    <TextView
        android:id="@+id/textView_ind_location_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_ind_location_address"
        android:layout_alignLeft="@+id/textView_ind_location_address"
        android:layout_marginBottom="220dp"
        android:text="@string/text_view" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView_ind_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="@string/text_view" />


</RelativeLayout>